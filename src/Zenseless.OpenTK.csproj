<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <PublishDocumentationFile>true</PublishDocumentationFile>
    <DocumentationFile>bin/Zenseless.Patterns.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://github.com/danielscherzer/Zenseless.Patterns</PackageProjectUrl>
    <PackageTags>OpenTK OpenGL .net</PackageTags>
    <PackageReleaseNotes>Auto generated by AppVeyor</PackageReleaseNotes>
    <Description>OpenGL abstraction classes for OpenGL objects.</Description>
    <Company>Daniel Scherzer</Company>
    <Authors>Daniel Scherzer</Authors>
    <Copyright>Copyright Â© 2013 Daniel Scherzer</Copyright>
    <Version>0.1.0</Version>
    <RepositoryUrl>https://github.com/danielscherzer/Zenseless.Patterns</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Include symbol files (*.pdb) in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <!--<IncludeSymbols>true</IncludeSymbols>-->
    <!--<SymbolPackageFormat>snupkg</SymbolPackageFormat>-->
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <Target Name="PostPack" AfterTargets="Pack" Condition=" '$(APPVEYOR)' == '' ">
    <Exec Command="dotnet nuget push bin\**.nupkg  -s $(AppData)\..\Local\Temp\NuGetScratch" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Magick.NET-Q8-AnyCPU" Version="14.4.0" />
    <PackageReference Include="OpenTK" Version="4.9.3" />
    <PackageReference Include="Zenseless.Patterns" Version="0.6.36" />
    <PackageReference Include="Zenseless.Resources" Version="0.2.16" />
  </ItemGroup>
</Project>
